/**
 * @param {string} word1
 * @param {string} word2
 * @return {string}
 */
var mergeAlternately = function(word1, word2) {
    let mergedString = '';
  let i = 0;
  
  while (i < word1.length || i < word2.length) {
    if (i < word1.length) {
      mergedString += word1.charAt(i);
    }
    if (i < word2.length) {
      mergedString += word2.charAt(i);
    }
    i += 1;
  }
  
  return mergedString;
};
